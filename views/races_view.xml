<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="race_view_tree" model="ir.ui.view">
        <field name="name">race.view.tree</field>
        <field name="model">race</field>
        <field name="arch" type="xml">
            <tree string="Races">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="race_view_form" model="ir.ui.view">
        <field name="name">race.view.form</field>
        <field name="model">race</field>
        <field name="arch" type="xml">
            <form string="New race">
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="race_action" model="ir.actions.act_window">
        <field name="name">Action Name</field>
        <field name="res_model">race</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
</odoo>