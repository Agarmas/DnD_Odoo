<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="character_view_kanban" model="ir.ui.view">
        <field name="name">character.view.kanban</field>
        <field name="model">character</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div>
                            <img t-att-src="'/web/image/character/' + record.id + '/image'"
                                class="oe_kanban_avatar oe_kanban_image" />
                            <div class="oe_kanban_details">
                                <strong class="oe_kanban_title">
                                    <t t-esc="record.name.value" />
                                </strong>
                            </div>
                        </div>
                    </t>
                </templates>
                <field name="name" />
                <field name="img" widget="image" options="{'zoom': true}"
                    data-src="/web/image/character/%s" />
            </kanban>
        </field>
    </record>

    <record id="character_view_tree" model="ir.ui.view">
        <field name="name">character.view.tree</field>
        <field name="model">character</field>
        <field name="arch" type="xml">
            <tree string="Characters">
                <field name="name" />
                <field name="c_classes_ids" />
                <field name="level" />
                <field name="race_id" />
            </tree>
        </field>
    </record>

    <record id="character_view_form" model="ir.ui.view">
        <field name="name">character.view.form</field>
        <field name="model">character</field>
        <field name="arch" type="xml">
            <form string="New character">
                <sheet>
                    <group>
                        <field name="max_hp" />
                        <field name="hp" />
                        <field name="necrotic_dmg" />
                        <field name="armor_class" />
                        <field name="proficency_bonus" 
                        readonly="1"
                        />
                        <field name="inspiration" />
                    </group>
                    <notebook>
                        <page name="personal" string="Personal">
                            <group>
                                <field name="img" widget="image" />
                                <field name="name" />
                                <field name="c_classes_ids" />
                                <field name="exp" />
                                <field name="level"
                                    readonly="1"
                                />
                                <field name="race_id" />
                                <field name="alingment" />
                                <field name="age" />
                                <field name="height" />
                                <field name="weight" />
                                <field name="lore" />
                            </group>
                        </page>
                        <page name="magic" string="Magic">
                            <group>
                                <field name="spell_slots_ids" />
                                <field name="spells_known_ids" />
                                <field name="spells_prepared_ids" />
                            </group>
                        </page>
                        <page name="inventory" string="Inventory">
                            <group>
                                <field name="money" />
                                <field name="items_ids" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="character_action" model="ir.actions.act_window">
        <field name="name">Character</field>
        <field name="res_model">character</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
</odoo>